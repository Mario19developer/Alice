<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/txidvb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:text="-RFDassdkvbaA"
        android:textAlignment="center"
        android:textSize="11sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/gra"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txusvb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="mario.castillo@driscolls.com"
            android:textSize="11sp" />


        <!-- fecha plantacion-->
        <TextView
            android:id="@+id/txfvb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:text="02/05/2022"
            android:textAlignment="center"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gra"
        android:orientation="horizontal">

        <!-- Rancho -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Proyecto"
            android:textAlignment="center"
            android:textSize="11sp" />

        <!-- variedad -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="Variedad"
            android:textAlignment="center"
            android:textSize="11sp" />

        <!-- Clon-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="QTY"
            android:textAlignment="center"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gra"
        android:orientation="horizontal">

        <!-- Rancho -->
        <TextView
            android:id="@+id/txproyectovb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="DLC"
            android:textAlignment="center"
            android:textSize="11sp" />

        <!-- variedad -->
        <TextView
            android:id="@+id/txvarvb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Centella"
            android:textAlignment="center"
            android:textSize="11sp" />

        <!-- Clon-->
        <TextView
            android:id="@+id/txqtyvb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="120000"
            android:textAlignment="center"
            android:textSize="11sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gra"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:text="Sector/Nave"
            android:textSize="11sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:text="Tunel/Aguilon"
            android:textSize="11sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:text="Lado"
            android:textSize="11sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:text="Cama/Mesa"
            android:textSize="11sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gra"
        android:orientation="horizontal">

        <!-- Sector-->
        <TextView
            android:id="@+id/txsecvb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textAlignment="center"
            android:textSize="11sp" />

        <!-- Fila-->
        <TextView
            android:id="@+id/txtunelvb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="19"
            android:textAlignment="center"
            android:textSize="11sp" />

        <!-- Tabla-->
        <TextView
            android:id="@+id/txladovb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Norte"
            android:textAlignment="center"
            android:textSize="11sp" />

        <!-- Tabla-->
        <TextView
            android:id="@+id/txcamavb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2078"
            android:textAlignment="center"
            android:textSize="11sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/rasp" />

</LinearLayout>